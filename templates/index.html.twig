{% extends 'base.html.twig' %}
{% block main %}
<section>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="bookshelf-form-container">
                <form id="bookshelf-new-book" action="{{ path('book_new') }}">
                    <legend>Dodaj książkę</legend>
                    <div class="form-group" id="bookshelf-new-book-authorFormGroup">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="bookshelf-new-book-author-surname[0]">Nazwisko autora</label>
                                <input type="text" name="authorSurname[0]" id="bookshelf-new-book-author-surname[0]" class="form-control">
                                <div class="form-error error-authorSurname[0]"></div>
                            </div>
                            <div class="col-md-6">
                                <label for="bookshelf-new-book-authorName[0]">Imię autora</label>
                                <input type="text" name="authorName[0]" id="bookshelf-new-book-authorName[0]" class="form-control">
                                <div class="form-error error-authorName[0]"></div>
                            </div>
                            <div class="col-md-2">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <label for="bookshelf-new-book-title">Tytuł</label>
                                <input type="text" name="title" id="bookshelf-new-book-title" class="form-control">
                                <div class="form-error error-title"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-4">
                                <label for="bookshelf-new-book-copies">Egzemplarze</label>
                                <input type="number" name="copies" id="bookshelf-new-book-copies" class="form-control">
                                <div class="form-error error-copies"></div>
                            </div>
                            <div class="col-md-4">
                                <label for="bookshelf-new-book-isbn">ISBN</label>
                                <input type="text" name="ISBN" id="bookshelf-new-book-isbn" class="form-control">
                                <div class="form-error error-ISBN"></div>
                            </div>
                            <div class="col-md-4">
                                <label for="bookshelf-new-book-price">Cena</label>
                                <input type="number" name="price" id="bookshelf-new-book-price" min="1" step="any" class="form-control">
                                <div class="form-error error-price"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="btn">Zapisz</button>
                            <button type="reset" class="btn btn-danger ml-sm-2">Wyczyść</button>
                            <button class="btn btn-success float-right" id="bookshelf-new-book-addAuthor">Dodaj autora</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="table-responsive-xl">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Autor</th>
                            <th>Tytuł</th>
                            <th>Egz.</th>
                            <th>ISBN</th>
                            <th>Cena</th>
                            <th style="min-width: 470px">Akcja</th>
                        </tr>
                    </thead>
                    <tbody
                        id="bookshelf-table-body" 
                        data-index="{{ path('bookshelf_index') }}" 
                        data-receive-path="{{ path('bookshelf_receive', { 'id': 0 }) }}"
                        data-release-path="{{ path('bookshelf_release', { 'id': 0 }) }}"
                        data-sell-path="{{ path('bookshelf_sell', { 'id': 0 }) }}"
                        data-edit-book-path="{{ path('book_edit', { 'id': 0 }) }}"
                        data-get-book-path="{{ path('book_one', { 'id': 0 }) }}"
                        data-delete-book-path="{{ path('book_delete', { 'id': 0 }) }}"
                        data-get-receivers-path="{{ path('receiver_index') }}"
                    >
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/authors.js') }}"></script>
    <script src="{{ asset('js/book.js') }}"></script>
    <script src="{{ asset('js/bookshelf.js') }}"></script>
    <script src="{{ asset('js/errors_handler.js') }}"></script>
{% endblock %}
