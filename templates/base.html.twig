<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="noindex">
    <title>{% block title %}Regał z książkami!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Montserrat|Playfair+Display&display=swap&subset=latin-ext" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
    {% endblock %}
    {% block headjavascripts %}
    {% endblock %}
</head>
<body>
<main>
    <div class="container-fluid">
        <header>
            <div class="bookshelf-title-container">
                <h1 class="bookshelf-title">Regał z książkami</h1>
            </div>
        </header>
        {% if is_granted('ROLE_USER') %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('catalog_show') }}">Strona główna</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-item nav-link" href="{{ path('catalog_form') }}">Dodaj książkę</a>
                    <a class="nav-item nav-link" href="{{ path('receiver_show') }}">Użytkownicy</a>
                    {% endif %}
                    <a class="nav-item nav-link" href="{{ path('security_logout') }}">Wyloguj</a>
                </div>
            </div>
        </nav>
        {% endif %}
        {% block main %}{% endblock %}
    </div>
</main>
{% block javascripts %}
    <script src="{{ asset('js/external_libraries/bootstrap-native-v4.min.js') }}"></script>
    <script src="{{ asset('js/tool/modal.js') }}"></script>
    <script src="{{ asset('js/book_action/bookshelf_elements.js') }}"></script>
{% endblock %}
</body>
</html>
